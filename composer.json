{
  "name": "thecodingmachine/twig-universal-module",
  "description": "Cross-framework module for Twig",
  "license": "MIT",
  "type": "library",
  "autoload": {
    "psr-4": {
      "TheCodingMachine\\": "src/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/mindplay-dk/provider-interop.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/mindplay-dk/simplex.git"
    }
  ],
  "require": {
    "php": ">=7.0",
    "mindplay/provider-interop": "^0.1",
    "twig/twig": "^1.0"
  },
  "require-dev": {
    "puli/cli":"^1.0",
    "puli/composer-plugin": "^1.0",
    "mnapoli/simplex": "dev-provider-interop as 0.2.0",
    "phpunit/phpunit": "^5.0",
    "satooshi/php-coveralls": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
